datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  discordId           String  @id @unique
  minecraftUuid       String? @unique
  openTicketChannelId String? @unique
  username            String?
  discriminator       String?
  accessToken         String?
  refreshToken        String?
  tokenExpires        BigInt?
}

model Guild {
  guildId       String   @id
  ticketRoleIds String[]
}

enum RoleType {
  DISCORD_STAFF
  GUILD_STAFF
}

model Role {
  guildId  String
  roleId   String
  roleType RoleType

  @@id([guildId, roleType])
}
